/* pages/product/product.wxss */

.list{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 0 15rpx;
}

.item{
    width: 45%;
    height: 180rpx;
    margin-top: 40rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 0rpx 30rpx rgb(189, 186, 186);
}

.itemImg{
    width: 100%;
    height: 100%;
}




.wave{
    position: relative;
    border: 1px solid silver;
    /* width: 100px; */
    height: 100px;
    /* border-radius: 50%; */
    line-height: 50px;
    margin: 0 auto;
    font-size: 14px;
    text-align: center;
    overflow: hidden;
    animation: water-wave linear infinite;
}
.wave1{
    position: absolute;
    top: 40%;
    left: -25%;
    background: #33cfff;
    opacity: .7;
    width: 200%;
    height: 200%;
    border-radius: 40%;
    animation: inherit;
    animation-duration: 5s;
}
.wave2{
    position: absolute;
    top: 40%;
    left: -35%;
    background: #0eaffe;
    opacity: .7;
    width: 200%;
    height: 200%;
    border-radius: 35%;
    animation: inherit;
    animation-duration: 7s;
}
.wave3{
    position: absolute;
    top: 50%;
    left: -35%;
    background: #0f7ea4;
    opacity: .3;
    width: 200%;
    height: 200%;
    border-radius: 33%;
    animation: inherit;
    animation-duration: 11s;
}
@keyframes  water-wave{
    0% {transform: rotate(0deg);}
    100% {transform: rotate(360deg);}
}


