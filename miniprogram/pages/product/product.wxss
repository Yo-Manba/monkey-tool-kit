/* pages/product/product.wxss */

.list{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    padding: 0 15rpx;
}

.item{
    width: 45%;
    height: 180rpx;
    margin-top: 40rpx;
    border-radius: 20rpx;
    overflow: hidden;
    box-shadow: 0 0rpx 30rpx rgb(189, 186, 186);
}

.itemImg{
    width: 100%;
    height: 100%;
}


.canvasWrapper{
    border: 1px solid red;
    height: 150rpx;
    position: relative;
}

.waveCanvas{
    position: absolute;
    top: 0;
    left: 0;
    border: 1px solid #000;
}   
